{
  "name": "My Human Reddit",
  "description": "Keep Reddit human with multi-media AI detection based on dynamic confidence level settings.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "my-human-reddit.png"
  },
  "content_scripts": [
    {
      "js": ["reddit_limiter.js"],
      "matches": ["https://www.reddit.com/*"]
    }

  ],
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.reddit.com/*", "http://localhost:5000/*"]
}