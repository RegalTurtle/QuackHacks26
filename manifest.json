{
  "name": "Reddit Scraper",
  "description": "Scrapes visible Reddit posts.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://*.reddit.com/*"
      ]

    }
  ],
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://www.reddit.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["reddit_limiter.js"]
    }
  ]
}